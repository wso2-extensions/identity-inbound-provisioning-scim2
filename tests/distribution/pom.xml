                                    <includes>**/*.sql</includes>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.wso2.carbon.identity.mgt</groupId>
                                    <artifactId>org.wso2.carbon.identity.mgt.feature</artifactId>
                                    <version>${org.wso2.carbon.identity.mgt.version}</version>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>
